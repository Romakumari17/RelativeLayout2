<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/space"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="80dp"
            android:text="@string/spaceStation"
            android:textSize="25dp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="@id/space"
            android:layout_marginLeft="150sp"
            android:src="@drawable/baseline_flight_24"
            android:id="@+id/flight"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Flight"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:layout_alignStart="@id/flight"
            android:textSize="30dp"
            android:layout_marginLeft="22sp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/baseline_directions_run_24"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/run"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Run"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:layout_marginRight="35sp"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/view1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@id/view2"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp"
            android:background="#889C27b0"
            android:src="@drawable/baseline_wb_sunny_24" />
        <ImageView
            android:id="@+id/view2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="#889C27B0"
            android:src="@drawable/baseline_water_24"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150sp"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@id/view2"
            />
        <ImageView
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:background="#A4BFBD"
            android:id="@+id/view3"
            android:src="@drawable/baseline_cloud_sync_24"
            android:layout_alignParentTop="true"
            android:layout_marginTop="160sp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="115sp"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="#B58DBC"
            android:src="@drawable/baseline_cloud_24"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="110dp"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/view4"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="#B58DBC"
            android:src="@drawable/baseline_smart_button_24"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="230sp"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

